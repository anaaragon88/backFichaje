{% extends 'base.html.twig' %}
{% block title %}{{parent()}} - Todos Salida {% endblock %}

{% block body %}
     {{ parent() }}
    <div class="container">
        <div class="row" style="justify-content: center; margin-top: 20px">
            <div class="col-md-8">
            <h3 style="color: white; text-align: center">Fichaje de Salida de los Empleados</h3>
            {% for salida in pagination %}
                <div class="bg-white rounded p-3 my-3 cursor"  onclick="window.location.href='{{ path('verSalida',{id:salida.id}) }}'">
                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                             <h6>Fichaje de Salida de {{salida.firstname}}</h6>
                             <div class="bg-yellow"> <i class="fa fa-user"></i><strong> Sede {{salida.locacion}}</strong></div>
                             <div class=" bg-green"><i class="far fa-clock"></i>Fecha: {{ salida.fecha_publicacion | date }}</div>
                        </div>
                            <div class="text-justify my-3">
                                {{ salida.comentario }}
                            </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
     <div class="d-flex justify-content-center">
         <div class="navigation">
             {{ knp_pagination_render(pagination) }}
         </div>

{% endblock %}