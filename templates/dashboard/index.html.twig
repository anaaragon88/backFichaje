{% extends 'base.html.twig' %}

{% block title %}
{{parent()}} - Dashboard
{% endblock %}

{% block body %}
Hola {{ app.user.firstName }}
<a href="{{ path('app_registro') }}"><button>Registro usuario</button></a>
<a href="{{ path('app_logout') }}"><button>Logout</button></a>
<a href="{{ path('app_entrada') }}"><button>Iniciar Fichaje</button></a>
<a href="{{ path('app_salida') }}"><button>Finalizar</button></a>
    <div class="container">
        <div class="row">
            <div class="col-md-8 cursor">
                {% for entrada in pagination %}

                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                            <div class="bg-yellow"> <i class="fa fa-user"></i><strong> Fichaje de entrada de {{entrada.firstname}}</strong></div>
                            <div class=" bg-green"><i class="far fa-clock"></i> <strong>Fecha: {{ entrada.fecha_publicacion | date }}, Sede {{ entrada.locacion }} -  {{entrada.comentario}}
                         </strong></div>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
            
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}
